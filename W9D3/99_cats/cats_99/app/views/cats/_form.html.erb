<h1>Add a Cat!</h1>

<form action="/cats" method="post">

    <label for="name">Name</label>
    <input id="name" type="text" name="cat[name]">

    <br>

    <label for="age">Birth Date</label>
    <input id="age" type="date" name="cat[birth_date]">

    <br>

    <label for="sex">Sex</label>
    <input id="sex" type="text" name="cast[sex]">

    <br>

    <select name="cat[color]">
        <option disabled selected>-- Choose Color --</option>
        <option value="White">White</option>
        <option value="Black">Black</option>
        <option value="Grey">Grey</option>
        <option value="Brown">Brown</option>
        <option value="Purple">Purple</option>
        <option value="Blond">Blond</option>
    </select>

    <br>

    <label for="description">Description</label>
    <textarea name="cat[description]"></textarea>

    <br>

    <input type="submit" value="Add Cat">

</form>
